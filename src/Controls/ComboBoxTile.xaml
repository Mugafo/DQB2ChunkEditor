<UserControl x:Class="DQB2ChunkEditor.Controls.ComboBoxTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DQB2ChunkEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="280" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="NearestNeighbor">

  <Grid>
    <StackPanel Orientation="Horizontal">
      <Image Source="{Binding Path=Tile.Image, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}" Height="28" Width="28" />
      <TextBlock VerticalAlignment="Center" Text="{Binding Path=Tile.Name, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="10,0,0,0" />
    </StackPanel>
  </Grid>
</UserControl>
