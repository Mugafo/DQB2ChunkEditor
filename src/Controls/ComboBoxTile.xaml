<UserControl x:Class="DQB2ChunkEditor.Controls.ComboBoxTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DQB2ChunkEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="28"
             d:DesignWidth="280"
             SnapsToDevicePixels="True">
  <UserControl.Resources>
    <Style TargetType="Image">
      <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
    </Style>
  </UserControl.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Image Grid.Column="0" Width="28" Source="{Binding Path=Tile.Image, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    <Label Grid.Column="1" VerticalAlignment="Center" Content="{Binding Path=Tile.Name, RelativeSource={RelativeSource AncestorType=UserControl}}" />
  </Grid>
</UserControl>
